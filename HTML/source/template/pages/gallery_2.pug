extends ../layouts/primary.pug

block variables

	-var page = 'gallery_2'

	-var dest = 'pages'

block main

	// section start

	section.hero-block

		picture
			source(srcset='img/typography.jpg' media='(min-width: 992px)')
			img.img--bg(src='img/typography.jpg' alt='img')

		+hero-inner('Gallery Grid', 'TransX')

	// section end

	// section start

	section.section
		.container
			.row

				.col-12

					ul.filter-panel.list--reset
						li.filter-panel__item.filter-panel__item--active(data-filter="*")
							span All images
						li.filter-panel__item(data-filter=".category_1")
							span Freight
						li.filter-panel__item(data-filter=".category_2")
							span Train
						li.filter-panel__item(data-filter=".category_3")
							span Shipping

		.container

			.js-gallery.gallery.gallery--grid.row.no-gutters

				.js-gallery__item.category_1.col-md-6.col-lg-4

					a.gallery__item(href="img/gal_2.jpg" data-fancybox="gallery")
