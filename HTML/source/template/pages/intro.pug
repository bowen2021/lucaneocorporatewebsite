	body

		.page-wrapper


			// menu dropdown start

			.menu-dropdown.menu-dropdown--intro

				.menu-dropdown__inner(data-value="start")

					.screen.screen--start

						.menu-dropdown__close
							+svg('close')

						.screen__item
							a.js-scroll.screen__link(href="#demos") Demo
						.screen__item
							a.js-scroll.screen__link(href="#inner-pages") Inner Pages
						.screen__item
							a.js-scroll.screen__link(href="#features") Features
						.screen__item
							a.js-scroll.screen__link(href="#technologies") Used Technologies

						.menu-dropdown__block.top-50
							a.button.button--filled(href="https://themeforest.net/item/transx-transportation-logistics-html-template/27089510" target="_blank") Buy TransX

			// menu dropdown end

			header.intro-header
				.row.no-gutters.align-items-center

					.col-8.col-lg-3

						.intro-header__logo.logo--white
							a(href="index.html")
								img(src="img/logo_white.png" alt="logo")

						.intro-header__logo.logo--dark
							a(href="index.html")
								img(src="img/logo_black.png" alt="logo")

					.col-lg-6.d-none.d-lg-block

						ul.intro-menu.list--reset
							li.intro-menu__item
								a.js-scroll.intro-menu__link(href="#demos") Demo
							li.intro-menu__item
								a.js-scroll.intro-menu__link(href="#inner-pages") Inner pages
							li.intro-menu__item
								a.js-scroll.intro-menu__link(href="#features") Features
							li.intro-menu__item
								a.js-scroll.intro-menu__link(href="#technologies") Used technologies

					.col-4.col-lg-3.text-right

						a.button.button--filled(href="https://themeforest.net/item/transx-transportation-logistics-html-template/27089510" target="_blank") Buy TransX

						// menu-trigger start

						.hamburger.d-inline-block.d-lg-none(class=(style === "white" ? "hamburger--white" : undefined))
							.hamburger-inner

						// menu-trigger end

			main.main

				block main

					// promo start

					.intro-promo

						picture
							source(srcset='img/intro-promo.jpg' media='(min-width: 992px)')
