// header start

header.shop-header
	.container-fluid
		.row.align-items-center

			.col-7.col-md-6.col-lg-3.d-flex.align-items-center

				// menu-trigger start

				.hamburger.d-none.d-md-inline-block(class=(style === "white" ? "hamburger--white" : undefined))
					.hamburger-inner

				// menu-trigger end

				.page-header__logo
					a(href="index.html")
						img(src="img/logo_black.png", alt="logo")

			.col-lg-5.d-none.d-lg-block

				include ../_main-menu/_main-menu

			.col-5.col-md-6.col-lg-4.d-flex.justify-content-end.align-items-center

				.lang-block

					.lang-icon
						img.img--contain(src="img/gbr.png", alt="img")

					// lang select start

					ul.lang-select
						li.lang-select__item.lang-select__item--active
							span En
							ul.lang-select__sub-list
								li
									a(href="#") French
								li
									a(href="#") Spanish
								li
									a(href="#") Deutsch
								li
									a(href="#") Russian

					// lang select end

				a.cart-trigger(href="shop-cart.html")
					+svg('bag')
					span.cart-trigger__count 25

				+button--filled("#", "Get a Quote")

				// menu-trigger start

				.hamburger.d-inline-block.d-md-none(class=(style === "white" ? "hamburger--white" : undefined))
					.hamburger-inner

				// menu-trigger end

// header end